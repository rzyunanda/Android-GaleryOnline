<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/fav_img_poster"
            android:layout_width="150dp"
            android:layout_height="220dp"
            android:layout_marginBottom="4dp"
            android:scaleType="centerCrop"
            tools:src="@color/colorAccent" />

        <TextView
            android:id="@+id/fav_tv_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@id/fav_img_poster"
            android:layout_toRightOf="@id/fav_img_poster"
            android:text="Nama Pemandangan"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fav_tv_lokasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fav_tv_nama"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"

            android:layout_marginRight="16dp"
            android:layout_toEndOf="@id/fav_img_poster"
            android:layout_toRightOf="@id/fav_img_poster"
            tools:text="Lokasi :" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/fav_img_poster"
            android:layout_toRightOf="@id/fav_img_poster"
            android:orientation="horizontal">



            <ImageView
                android:id="@+id/fav_img_fav"
                android:layout_width="wrap_content"
                app:srcCompat="@drawable/ic_favorite_border_black_24dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:ignore="VectorDrawableCompat" />


        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>