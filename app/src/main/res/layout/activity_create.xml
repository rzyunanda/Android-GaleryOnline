<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:lineSpacingExtra="10sp"
                android:padding="10dp"
                android:text="TAMBAH FOTO"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/text_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/edt_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_deskripsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/edt_deskripsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_lokasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lokasi"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/edt_lokasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="32dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:src="@drawable/movie_poster" />

                <Button
                    android:id="@+id/btn_choose_image"

                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:drawableLeft="@android:drawable/ic_menu_camera"
                    android:text="Pilih Foto" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edt_lat"
                    android:layout_width="182dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:hint="Lokasi" />

                <Button
                    android:id="@+id/btn_lokasi"

                    android:layout_width="181dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Dapatkan Lokasi" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_tambah"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Tambah" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>